{
  "name": "bcb-interest-check",
  "version": "1.0.0",
  "license": "MIT",
  "main": "_electron/main.js",
  "author": {
    "name": "Ruan Frohlich",
    "email": "ruanfrohlich@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ruanfrohlich/scrap-banco-central.git"
  },
  "description": "Programa para verificar taxa de  juros abusiva.",
  "targets": {
    "main": false,
    "electron": {
      "sourceMap": false,
      "distDir": "_electron",
      "engines": {
        "node": ">=22"
      },
      "source": [
        "src/main.ts",
        "src/preload.ts"
      ]
    },
    "static": {
      "sourceMap": false,
      "distDir": "_electron/static",
      "publicUrl": ".",
      "source": [
        "src/views/templates/index.html"
      ]
    }
  },
  "build": {
    "appId": "com.ruanfrohlich.BCBInterestCheck",
    "productName": "BCB Interest Check",
    "artifactName": "BCBInterestCheck.${ext}",
    "icon": "./src/images/logo.ico",
    "win": {
      "signtoolOptions": {
        "publisherName": "Ruan Frohlich"
      },
      "target": "nsis"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Utility",
      "icon": "./src/images/logo.png"
    },
    "publish": {
      "provider": "github",
      "owner": "ruanfrohlich",
      "releaseType": "release"
    }
  },
  "scripts": {
    "dev": "nodemon -w 'src/*' -e js,ts,tsx,css,html -x 'yarn start'",
    "clean": "rimraf -rf _electron .parcel-cache",
    "start": "yarn clean && parcel build && cross-env NODE_ENV=production electron .",
    "build": "yarn clean && parcel build && cross-env NODE_ENV=production electron-builder -wl",
    "release": "rimraf _electron .parcel-cache dist && parcel build && cross-env NODE_ENV=production electron-builder -wl -p always"
  },
  "dependencies": {
    "cheerio": "^1.0.0",
    "electron-updater": "^6.3.9",
    "lodash": "^4.17.21",
    "puppeteer": "^24.1.1"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.0.3",
    "@types/lodash": "^4.17.15",
    "@types/node": "^22.12.0",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "cross-env": "^7.0.3",
    "electron": "^34.0.2",
    "electron-builder": "^25.1.8",
    "electron-builder-squirrel-windows": "^25.1.8",
    "nodemon": "^3.1.9",
    "parcel": "^2.13.3",
    "prettier": "^3.4.2",
    "process": "^0.11.10",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "rimraf": "^6.0.1",
    "tailwindcss": "^4.0.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  }
}